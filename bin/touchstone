#!/usr/bin/env php
<?php

use Symfony\Component\Console\Application;

use const SebKay\Touchstone\NAME;
use const SebKay\Touchstone\VERSION;

$autoloaders = [
    'app'      => __DIR__ . '/../vendor/autoload.php',
    'consumer' => \exec('pwd') . '/vendor/autoload.php',
];

foreach ($autoloaders as $env_key => $file) {
    if (file_exists($file)) {
        require $file;

        break;
    }
}

$app = new Application(NAME, VERSION);

$app->add(new \SebKay\Touchstone\Console\Commands\Setup());

$app->run();
