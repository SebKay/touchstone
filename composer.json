{
    "name": "sebkay/touchstone",
    "description": "A simple framework for running WordPress unit and integration tests.",
    "license": "MIT",
    "authors": [
        {
            "name": "Seb Kay",
            "email": "seb@sebkay.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "symfony/console": "^6.4",
        "pestphp/pest": "^2.34",
        "php-stubs/wordpress-tests-stubs": "^6.3",
        "php-stubs/wordpress-stubs": "^6.4",
        "laravel/prompts": "^0.1.16"
    },
    "require-dev": {
        "spatie/ray": "^1.41",
        "laravel/pint": "^1.14"
    },
    "autoload": {
        "psr-4": {
            "SebKay\\Touchstone\\": "./src/"
        },
        "files": [
            "./inc/helpers.php"
        ]
    },
    "bin": [
        "bin/touchstone"
    ],
    "scripts": {
        "dev": [
            "composer install --prefer-dist --no-progress"
        ],
        "prod": [
            "composer install --prefer-dist --no-progress --no-dev"
        ],
        "test": [
            "./vendor/bin/pest"
        ],
        "lint": [
            "./vendor/bin/pint --preset psr12 --test -v"
        ],
        "fix": [
            "./vendor/bin/pint --preset psr12"
        ]
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
