{
    "name": "sebkay/wp-touchstone",
    "description": "A simple framework for running WordPress unit and integration tests.",
    "license": "MIT",
    "authors": [
        {
            "name": "Seb Kay",
            "email": "seb@sebkay.com"
        }
    ],
    "require": {
        "phpunit/phpunit": "^7.5",
        "sebkay/wp-unit-test-stubs": "^1.0",
        "symfony/console": "^5.3",
        "guzzlehttp/guzzle": "^7.3",
        "league/flysystem": "^2.3",
        "wp-cli/wp-config-transformer": "^1.2"
    },
    "require-dev": {
        "spatie/ray": "^1.26",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4" : {
            "WPTS\\": "./src/"
        },
        "files": [
            "./inc/helpers.php"
        ]
    },
    "bin": [
        "bin/touchstone"
    ]
}
